<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cvProgressGuidelineStart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cvProgressGuidelineEnd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

    <TextView
        android:id="@+id/cvProgressName"
        style="@style/TextSmallSubtitleStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        app:layout_constraintEnd_toStartOf="@+id/cvProgressGuidelineStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/leisureAndCulture" />

    <ProgressBar
        android:id="@+id/cvProgressBar"
        style="@style/PercentProgressStyle"
        android:layout_width="0dp"
        android:progressDrawable="@drawable/progress_drawable"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/cvProgressName"
        app:layout_constraintEnd_toStartOf="@+id/cvProgressGuidelineEnd"
        app:layout_constraintStart_toEndOf="@+id/cvProgressName"
        app:layout_constraintTop_toTopOf="@+id/cvProgressName"
        tools:progress="50" />

    <TextView
        android:id="@+id/cvProgressPercent"
        style="@style/TextSmallSubtitleStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/cvProgressBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/cvProgressGuidelineEnd"
        app:layout_constraintTop_toTopOf="@+id/cvProgressBar"
        tools:text="50%" />

</androidx.constraintlayout.widget.ConstraintLayout>