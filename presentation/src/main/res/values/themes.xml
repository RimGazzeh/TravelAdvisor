<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TravelAdvisor" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_f4f4f4</item>
        <item name="colorPrimaryVariant">@color/grey_c1c1c1</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_fa6401</item>
        <item name="colorSecondaryVariant">@color/orange_bf3200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Color Surface -->
        <item name="colorSurface">?attr/colorPrimary</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorError">?attr/colorSecondaryVariant</item>
        <!-- Shapes -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
    </style>
</resources>